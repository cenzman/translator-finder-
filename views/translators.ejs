<%- include('partials/header') %>

<div class="catalog-header">
  <div>
    <h1><%= t.translators.catalog_title %></h1>
    <p class="page-subtitle"><%= t.translators.catalog_subtitle %></p>
  </div>
</div>

<% if (translators.length === 0) { %>
  <div class="empty-state">
    <p><%= t.translators.no_translators %></p>
    <a href="/auth/register" class="btn" style="margin-top:16px;"><%= t.translators.be_first %></a>
  </div>
<% } else { %>
  <div class="translator-grid">
    <% translators.forEach(function(tr) { %>
      <div class="translator-card">
        <div class="card-header">
          <div class="avatar"><%= tr.name.charAt(0).toUpperCase() %></div>
          <div>
            <div class="card-name"><a href="/translators/<%= tr.id %>"><%= tr.name %></a></div>
            <span class="badge badge-lang"><%= tr.languages %></span>
          </div>
        </div>
        <div class="card-meta">
          <span>&#128188; <%= tr.experience_years %> <%= t.translators.years_experience %></span>
          <span>&#128176; $<%= tr.hourly_rate %>/hr</span>
        </div>
        <div class="card-footer">
          <div class="rating">&#11088; <%= tr.avg_rating %> <span style="color:var(--text-muted);font-weight:400;">(<%= tr.review_count %>)</span></div>
          <a href="/translators/<%= tr.id %>" class="btn" style="padding:7px 16px;font-size:13px;"><%= t.translators.view_profile %></a>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>

<%- include('partials/footer') %>
