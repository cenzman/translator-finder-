<%- include('partials/header') %>

<div class="form-card">
  <h1><%= t.login.title %></h1>
  <p class="form-subtitle"><%= t.login.subtitle %></p>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <form method="POST" action="/auth/login">
    <input type="hidden" name="_csrf" value="<%= generateCsrfToken() %>">
    <div class="form-group">
      <label for="email"><%= t.login.email %></label>
      <input type="email" id="email" name="email" placeholder="you@example.com" required>
    </div>

    <div class="form-group">
      <label for="password"><%= t.login.password %></label>
      <input type="password" id="password" name="password" placeholder="••••••••" required>
    </div>

    <button type="submit" class="btn" style="width:100%;"><%= t.login.sign_in %></button>
  </form>

  <p class="form-footer"><%= t.login.no_account %> <a href="/auth/register"><%= t.login.create_one %></a></p>
</div>

<%- include('partials/footer') %>
